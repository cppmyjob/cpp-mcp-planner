{
  "name": "mcp-planning-server",
  "version": "1.0.0",
  "description": "MCP server for planning and task management with Claude Code",
  "main": "packages/mcp-server/dist/index.js",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc --build",
    "build:config": "npm run build -w @mcp-planner/config",
    "build:core": "npm run build -w @mcp-planner/core",
    "build:web-server": "npm run build -w @mcp-planner/web-server",
    "build:dashboard": "npm run build -w web-dashboard",
    "dev": "tsx watch packages/mcp-server/src/cli.ts",
    "dev:web": "npm run start:dev -w @mcp-planner/web-server",
    "dev:dashboard": "npm run start -w web-dashboard",
    "start": "node packages/mcp-server/dist/cli.js",
    "start:web": "npm run start -w @mcp-planner/web-server",
    "test": "npm run test:core && npm run test:mcp-e2e && npm run test:web-server && npm run test:web-dashboard",
    "test:all": "npm run test && npm run e2e:web-dashboard",
    "test:core": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=\"tests/(domain|infrastructure|integration)/\"",
    "test:mcp-e2e": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=\"tests/e2e/\"",
    "test:web-server": "jest --config packages/web-server/jest.config.js",
    "test:web-dashboard": "npm test -w web-dashboard",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "e2e:web-dashboard": "npm run e2e -w web-dashboard",
    "lint": "eslint packages tests --max-warnings 0",
    "lint:fix": "eslint packages tests --fix",
    "typecheck": "tsc --build --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.2",
    "proper-lockfile": "^4.1.2",
    "uuid": "^9.0.0",
    "write-file-atomic": "^7.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/proper-lockfile": "^4.1.4",
    "@types/uuid": "^9.0.0",
    "@types/write-file-atomic": "^4.0.3",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.7.0",
    "typescript": "~5.3.3",
    "typescript-eslint": "^8.49.0"
  },
  "engines": {
    "node": ">=18.19.1"
  },
  "keywords": [
    "mcp",
    "claude",
    "planning",
    "task-management"
  ],
  "license": "MIT"
}
